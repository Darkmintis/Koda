# Koda Local Development Environment
# Copy this to .env and customize as needed

# ===========================================
# DATABASE (PostgreSQL - runs in Docker)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=koda
POSTGRES_PASSWORD=koda_local_dev
POSTGRES_DB=koda

# ===========================================
# REDIS (runs in Docker)
# ===========================================
REDIS_URI=redis://localhost:6379

# ===========================================
# APPLICATION
# ===========================================
# Local development URL
PUBLIC_URI=http://localhost:3449

# Generate with: openssl rand -base64 64
SECRET_KEY=local-dev-secret-key-change-in-production

# ===========================================
# EMAIL (Mailhog - catches all emails locally)
# ===========================================
# View emails at http://localhost:8025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_TLS=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_DEFAULT_FROM=noreply@localhost
SMTP_DEFAULT_REPLY_TO=support@localhost

# ===========================================
# FILE STORAGE (MinIO - local S3 replacement)
# ===========================================
# MinIO Console: http://localhost:9001
# Login: koda_access_key / koda_secret_key
STORAGE_BACKEND=s3
STORAGE_S3_ENDPOINT=http://localhost:9000
STORAGE_S3_ACCESS_KEY=koda_access_key
STORAGE_S3_SECRET_KEY=koda_secret_key
STORAGE_S3_BUCKET=koda-assets
STORAGE_S3_REGION=us-east-1

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_REGISTRATION=true
ENABLE_LOGIN_WITH_PASSWORD=true
ENABLE_LOGIN_WITH_LDAP=false

# ===========================================
# DEVELOPMENT
# ===========================================
# Set to true for verbose logging
DEBUG=true
LOG_LEVEL=debug
