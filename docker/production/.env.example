
# ===========================================
# Koda Production Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ===========================================
# REQUIRED - Must be set
# ===========================================

# Your domain (without https://)
DOMAIN=koda.yourdomain.com

# Public URI (with https://)
PUBLIC_URI=https://koda.yourdomain.com

# Database password (generate: openssl rand -base64 32)
POSTGRES_PASSWORD=your_secure_password_here

# Secret key for sessions (generate: openssl rand -hex 32)
SECRET_KEY=your_64_char_hex_secret_here

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=koda
POSTGRES_DB=koda

# ===========================================
# REGISTRATION & AUTH
# ===========================================
REGISTRATION_ENABLED=true

# Feature flags
PENPOT_FLAGS=enable-login-with-password disable-telemetry enable-webhooks

# ===========================================
# EMAIL (Optional but recommended)
# ===========================================
# For password resets, invitations, etc.
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# DIGITALOCEAN SPACES (File Storage)
# ===========================================
# Get these from DigitalOcean Spaces settings
STORAGE_BACKEND=s3
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
SPACES_BUCKET=koda-assets
SPACES_ACCESS_KEY=your_spaces_access_key
SPACES_SECRET_KEY=your_spaces_secret_key
SPACES_REGION=nyc3

# ===========================================
# SSL (Auto-configured by setup script)
# ===========================================
SSL_EMAIL=your-email@example.com
